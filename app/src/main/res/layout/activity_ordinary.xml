<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gally.pointscalculator.MainActivity">

    <TextView
        android:id="@+id/Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subjects"
        android:layout_alignEnd="@+id/O3"
        android:layout_marginBottom="39dp"
        android:fontFamily="sans-serif"
        android:text="0"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/points_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points:"
        android:textSize="60sp"
        android:layout_alignBaseline="@+id/Points"
        android:layout_alignBottom="@+id/Points"
        android:layout_alignStart="@+id/O1" />

    <Button
        android:id="@+id/O2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/H1"
        android:layout_alignBottom="@+id/O1"
        android:layout_alignStart="@+id/O5"
        android:background="@color/colorAccent"
        android:onClick="onButtonTap"
        android:text="O2"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/O1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/O2"
        android:background="@color/colorAccent"
        android:onClick="onButtonTap"
        android:text="O1"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/O3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/O2"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/O2"
        android:background="@color/colorAccent"
        android:onClick="onButtonTap"
        android:text="O3"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/O4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/O1"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/O2"
        android:background="@color/colorAccent"
        android:onClick="onButtonTap"
        android:text="O4"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/O5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/O4"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:onClick="onButtonTap"
        android:text="O5"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/O6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/O5"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/O5"
        android:background="@color/colorAccent"
        android:onClick="onButtonTap"
        android:text="O6"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/O7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/O4"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/O2"
        android:background="@color/colorAccent"
        android:onClick="onButtonTap"
        android:text="O7"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/O8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/O7"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:onClick="onButtonTap"
        android:text="O8"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/O8"
        android:layout_toRightOf="@id/O2"
        android:layout_marginLeft="20dp"
        android:background="?android:attr/colorEdgeEffect"
        android:onClick="onButtonTap"
        android:text="undo"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/O7"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/O2"
        android:layout_marginRight="20dp"
        android:background="?android:attr/colorEdgeEffect"
        android:onClick="onButtonTap"
        android:text="reset&#10;"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/OL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/reset"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:onClick="onButtonTap"
        android:text="Ordinary&#10;Level"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/HM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/OL"
        android:layout_toRightOf="@id/O2"
        android:layout_marginLeft="20dp"
        android:background="?android:attr/colorEdgeEffect"
        android:onClick="onButtonTap"
        android:text="Higher&#10;Maths"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/subjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Subjects entered: 0"
        android:layout_above="@+id/O1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

</android.widget.RelativeLayout>
